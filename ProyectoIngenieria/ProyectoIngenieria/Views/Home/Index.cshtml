<!-- Portfolio Grid -->
<section class="bg-light page-section" id="portfolio">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="section-heading text-uppercase">Nuestras Actividades</h2>
            <br />

        </div>

    </div>
    <div id="demo" class="carousel slide" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">

            <div class="carousel-item active ">
                <img class="img-fluid" src="~/Static/@ViewBag.activity.Photo.image" alt="" style="height:400px; width:100%">
            </div>

            @foreach (var item in ViewBag.activities)
            {
                <div class="carousel-item ">
                    <img class="img-fluid" src="~/Static/@item.Photo.image" alt="" style="height:400px; width:100%">
                </div>
            }
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class=""><i class="fas fa-5x fa-angle-left"></i></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class=""><i class="fas fa-5x  fa-angle-right"></i></span>
        </a>
    </div>

</section>

<!-- Services -->
<section class="bg-light page-section" id="comment">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Testimonios</h2>
            </div>
        </div>
        <div id="comments" class="carousel slide" data-ride="carousel">

            <!-- Indicators -->
            <ul class="carousel-indicators">
                <li data-target="#comments" data-slide-to="0" class="active"></li>
                <li data-target="#comments" data-slide-to="1"></li>
                <li data-target="#comments" data-slide-to="2"></li>
            </ul>

            <!-- The slideshow -->
            <div class="carousel-inner">
                <div class="carousel-item active text-center">
                    <br />
                    <p style="font-family:'Montserrat'; font-size:20px;">"@(ViewBag.description)"</p>
                    <p style="font-family:'Montserrat'; font-size:20px;">@(ViewBag.name)</p>
                    <br />
                </div>

                @foreach (var item in ViewBag.comments)
                {
                    <div class="carousel-item text-center">
                        <br />
                        <p style="font-family:'Montserrat'; font-size:20px;">"@(item.description)"</p>
                        <p style="font-family:'Montserrat'; font-size:20px;">@(item.name)</p>
                        <br />
                    </div>
                }
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#comments" data-slide="prev">
                <span class=""><i class="fas fa-5x fa-angle-left"></i></span>
            </a>
            <a class="carousel-control-next" href="#comments" data-slide="next">
                <span class=""><i class="fas fa-5x  fa-angle-right"></i></span>
            </a>
        </div>
    </div>
</section>

