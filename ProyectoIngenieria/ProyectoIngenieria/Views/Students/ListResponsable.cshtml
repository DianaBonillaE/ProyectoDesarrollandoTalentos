@model IEnumerable<ProyectoIngenieria.DB.Responsable>

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

<div class="container md-3">
    <br />
    <h1 class="text-center">Responsable a Cargo</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-6"></div>
      
    </div>
    <div class="panel-body">
        <br />
        <table class="table ">
            <tr class="text-center">
                <th>
                    Identificación
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Descripción
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="text-center">

                    <td>
                        @Html.DisplayFor(modelItem => item.identification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                      @Html.ActionLink("Detalles", "DetailsResponsable", new { id = item.identification })
                    </td>
                </tr>
            }

        </table>
        <br />

        <div class="row">
            <div class="col-sm-5"></div>
            
        </div>

        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">

            </div>
        </div>
       

    </div>
    <br />
    <br />
</div>
<hr />