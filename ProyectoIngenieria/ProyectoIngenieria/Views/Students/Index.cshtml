

@model PagedList.PagedList<ProyectoIngenieria.DB.Student>

@using PagedList.Mvc;

@Html.Partial("~/Views/Home/AdminMenu.cshtml")


<div class="container md-3">
    <br />
    <h1 class="text-center">Estudiante</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-9"></div>
        <div class="col-sm-3 ">
            <a href="~/Students/Create" class="btn btn-primary btn-md text-uppercase">Añadir Nuevo</a>
        </div>
    </div>
    <div class="panel-body">
        <br />
        <table class="table ">
            <tr class="text-center">
                <th>
                    Identificación
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="text-center">

                    <td>
                        @Html.DisplayFor(modelItem => item.identification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_name)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.identification }) |

                        @Html.ActionLink("Eliminar", "Delete", new { id = item.identification })|
                        @Html.ActionLink("Detalles", "Details", new { id = item.identification })

                    </td>
                </tr>
            }

        </table>
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
            </div>
        </div>


        <br />
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">

            </div>
        </div>
        

    </div>
    <br />
    <br />
</div>
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 6%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>
