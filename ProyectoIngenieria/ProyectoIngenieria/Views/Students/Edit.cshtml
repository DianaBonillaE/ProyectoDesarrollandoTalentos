@model ProyectoIngenieria.DB.Student

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Estudiantes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.identification)

        <div class="container md-3">
            <br />
            <h1 class="text-center">Actualizar un Estudiante</h1>
            <br />
            <br />
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-8">
                        <div class="form-group">
                            Nombre
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            Apellidos
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.last_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            Número de Teléfono
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.phone_number, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.phone_number, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        
                        <div class="form-group">
                            Estudiante Asignado
                            <div class="col-md-10">
                                <select multiple="multiple" style="width:100%;" id="curses" name="curses">
                                    @foreach (var item in ViewBag.curses)
                                    {
                                        var sel = (Model.Curse_Student.Where(ca => ca.student_identification == item.identification).Count() > 0) ? "selected" : "";

                                        <option value="@item.identification" @sel>@item.name</option>

                                    }
                                    <option value="0">Ninguno</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    @(ViewBag.name)
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <a href="~/Estudiantes/Index" class="btn btn-primary btn-md text-uppercase">Cancelar</a>
                                </div>
                            </div>
                            <div class="col-md-1">
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-md text-uppercase" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>
}
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }

    .form-group {
        align-content: center;
    }
</style>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
