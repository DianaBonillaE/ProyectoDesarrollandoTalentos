@model ProyectoIngenieria.DB.Course

@{
    ViewBag.Title = "Delete";
}

<div class="container md-3">
    <br />
    <h1 class="text-center">¿Está seguro de eliminar el Curso?</h1>


    <div class="panel-body">
        <br />

        <div class="row" style="text-align: center;">
            <div class="col-sm-1"></div>

                <div class="col-sm-3">

                    @Html.DisplayNameFor(model => model.description)
                    <br />
                    •  @Html.DisplayFor(model => model.description)
                </div>

                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.name)

                    <br />
                    • @Html.DisplayFor(model => model.name)
                </div>

                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.start_date)

                    <br />
                    • @Html.DisplayFor(model => model.start_date)
                </div>

                <div class="col-sm-2">
                    @Html.DisplayNameFor(model => model.end_date)
                    <br />
                    • @Html.DisplayFor(model => model.end_date)
                </div>

            </div>
        <div class="row" style="margin-top:2%;">
            <div class="col-md-4">
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <a href="~/Curses/Index" class="btn btn-primary btn-md text-uppercase">Cancelar</a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <input type="submit" value="Eliminar" class="btn btn-primary btn-md text-uppercase" />
                    }
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Aulas
                   
                        @foreach (var item in ViewBag.rooms)
                        {
                            var sel = (Model.Room.Where(ca => ca.id == item.id).Count() > 0) ? "selected" : "";

                            <option value="@item.id" @sel>Número aula: @item.room_number | Capacidad: @item.capacity</option>

                        }
                  
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">
                    Profesor
                   
                        @foreach (var item in ViewBag.teachers)
                        {
                            var sel = (Model.Teacher.Where(ca => ca.identification == item.identification).Count() > 0) ? "selected" : "";
                            <option value=@item.identification @sel>@item.name @item.last_name</option>
                        }
                   
                </div>
            </div>
        </div>
        </div>
    </div>
  
    <style>

        #mainNav {
            background-color: rgb(46,49,146);
        }

        .md-3 {
            box-shadow: 5px 0px 40px rgba(0,0,0, .2);
            width: 97%;
            margin-top: 10%;
        }

        .panel {
            border-radius: 0 !important;
            transition: box-shadow 0.5s;
            width: 55%;
        }

        .form-group {
            align-content: center;
        }
    </style>
