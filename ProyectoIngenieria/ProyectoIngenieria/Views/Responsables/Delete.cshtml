@model ProyectoIngenieria.DB.Responsable

@{
    ViewBag.Title = "Details";
}

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

<div class="container md-3">
    <br />
    <h1 class="text-center">Está seguro de eliminar el Responsable</h1>


    <div class="panel-body">
        <br />

        <div class="row" style="text-align: center;">
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.identification)
                <br />
                •  @Html.DisplayFor(model => model.identification)
            </div>



            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.name)
                <br />
                •  @Html.DisplayFor(model => model.name)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.last_name)
                <br />
                •  @Html.DisplayFor(model => model.last_name)
            </div>
            <div class="col-sm-2">
                @Html.DisplayNameFor(model => model.phone_number)
                <br />
                •  @Html.DisplayFor(model => model.phone_number)
            </div>
        </div>


        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    <a href="~/Responsables/Index" class="btn btn-primary btn-md text-uppercase">Cancelar</a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-2">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <input type="submit" value="Eliminar" class="btn btn-primary btn-md text-uppercase" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }

    .form-group {
        align-content: center;
    }
</style>