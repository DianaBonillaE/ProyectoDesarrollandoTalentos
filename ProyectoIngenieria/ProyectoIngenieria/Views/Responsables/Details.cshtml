@model ProyectoIngenieria.DB.Responsable

@{
    ViewBag.Title = "Details";
}

<div class="container md-3">
    <br />
    <h1 class="text-center">Detalles del Responsable</h1>
    <br />
    <br />
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-8">
                <div class="row" style="text-align: center;">
                    <div class="col-sm-2">

                        Identificación
                        <br />
                        •  @Html.DisplayFor(model => model.identification)
                    </div>

                    <div class="col-sm-2">

                        Nombre
                        <br />
                        •  @Html.DisplayFor(model => model.name)
                    </div>
                    <div class="col-sm-2">

                      Apellidos
                        <br />
                        •  @Html.DisplayFor(model => model.last_name)
                    </div>

                    <div class="col-sm-2">
                        Número de Teléfono
                        <br />
                        •  @Html.DisplayFor(model => model.phone_number)
                    </div>

                    <div class="col-sm-2">
                       Dirección
                        <br />
                        •  @Html.DisplayFor(model => model.address)
                    </div>

                    <div class="col-sm-2">
                        Descripción
                        <br />
                        •  @Html.DisplayFor(model => model.description)
                    </div>
                    <div class="col-sm-2">
                        Correo
                        <br />
                         @Html.DisplayFor(model => model.email)
                    </div>
                </div>
                <div class="row" style="margin-top: 5%; text-align: center;">
                    <div class="col-sm-2">
                       Estudiante Asignado

                        <br />
                        @foreach (var item in ViewBag.students)
                        {

                            var sel = (Model.Student.Where(ca => ca.responsable_identification == item.identification).Count() > 0) ? "selected" : "ninguno";

                            <option value="@item.identification" @sel>•  @item.name @item.last_name</option>

                        }
                    </div>
                    
                                  </div>
                <div class="row">
                    <div class="col-md-2">
                    </div>
                    <div class="form-group">
                        <div class="col-md-2">
                            <a href="~/Responsables/Index" class="btn btn-primary btn-md text-uppercase">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }

    .form-group {
        align-content: center;
    }
</style>

