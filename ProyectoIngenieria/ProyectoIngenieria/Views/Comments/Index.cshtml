@model PagedList.IPagedList<ProyectoIngenieria.DB.Comments>
@using PagedList.Mvc;

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

<div class="container md-3">
    <br />
    <h1 class="text-center">Comentarios</h1>
    <br />
    <br />


    <div class="panel-body">
        @if (ViewBag.message != null)
        {
            <div class="alert alert-success text-center alert-dismissible">
                <h4 class="alert-heading"><i class="icon fa fa-check"></i> ¡Correcto!</h4>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h6>@ViewBag.message</h6>
            </div>
        }
        <br />
        <table class="table table-responsive-sm">
            <tr>
                <th>
                    <p class="text-muted">Nombre</p>
                </th>
                <th>
                    <p class="text-muted">Descripción</p>
                </th>
                <th>
                    <p class="text-muted">Estado</p>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @if (item.state == true)
                        {
                            <a>Mostrado</a>
                        }
                        else
                        {
                            <a>No mostrado</a>
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Actualizar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
        <br />
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
            </div>
        </div>


    </div>
    <br />
    <br />
</div>
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 8%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>

