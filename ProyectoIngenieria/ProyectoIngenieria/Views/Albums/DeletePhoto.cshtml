@model ProyectoIngenieria.DB.Photo

@{
    ViewBag.Title = "Delete";
}

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

<div class="container md-3">
    <br />
    <h1 class="text-center">Detalles de la Fotografía</h1>
    <br />
    <br />
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-8">
                <div class="row" style="text-align: center;">
                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.name)
                        <br />
                        @Html.DisplayFor(model => model.name)
                    </div>

                    <div class="col-sm-2">
                        @Html.DisplayNameFor(model => model.image)
                        <br />
                        @Html.DisplayFor(model => model.image)
                    </div>

                    <div class="row" style="margin-top:2%;">
                        <div class="col-md-10">
                        </div>

                        <br />
                        <br />
                        <div class="form-group">

                            <div class="col-md-2">
                                <a href="/Album/Index" class="btn btn-primary btn-md text-uppercase">Cancelar</a>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-2">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <input type="submit" value="Eliminar" class="btn btn-primary btn-md text-uppercase" />
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }

    .form-group {
        align-content: center;
    }
</style>
