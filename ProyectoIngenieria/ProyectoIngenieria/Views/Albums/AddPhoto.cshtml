
@model ProyectoIngenieria.DB.Album



@Html.Partial("~/Views/Home/AdminMenu.cshtml")


@using (Html.BeginForm("AddPhoto", "Albums", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container md-3">
        <br />
        <h1 class="text-center">Ingresar Fotografias</h1>
        <br />
        <br />
        <div class="panel-body">
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-8">
                    <div class="form-group">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group">

                            <div class="col-md-10">
                                Nombre de la imagen
                                <br />
                                <input type="text" name="nameFile" id="nameFile" />

                            </div>
                            @if (ViewBag.MessagePhotoName != null)
                            {
                            <div class="col-md-10">
                                <div class="alert alert-danger">
                                    @ViewBag.MessagePhotoName
                                </div>
                            </div>
                            }
                        </div>


                        <div class="col-md-10">
                            Seleccione una foto
                            <br />
                            <input type="file" name="File" id="File" />
                        </div>
                        @if (ViewBag.MessagePhoto != null)
                        {
                        <div class="col-md-10">
                            <div class="alert alert-danger">
                                @ViewBag.MessagePhoto
                            </div>
                        </div>
                        }
                    </div>
                </div>
                <div class="col-sm-3 ">
                 <a href="~/Albums/Index" class="btn btn-primary btn-md text-uppercase">Regresar</a>
                </div>
            </div>
            <br />
        </div>
        
    </div>
}
<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>
