@using ProyectoIngenieria.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar sesión";
}

<div class="container md-3">

    <section id="loginForm">

        <h2 class="section-heading text-uppercase text-center" style="margin-top:-6%;">Iniciar Sesión</h2>
        <br />
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Identification, new { @class = "col-md-4 control-label text-muted mov " })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Identification, new { @class = "form-control mov" })
                    @Html.ValidationMessageFor(m => m.Identification, "", new { @class = "text-danger mov" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label text-muted mov" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control mov" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger mov" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-10">
                    <input type="submit" value="Iniciar sesión" class="btn btn-primary btn-lg text-uppercase movb" />
                </div>
            </div>

        }
    </section>
</div>

<hr />

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 50%;
        margin-top: 9%;
    }

    .mov {
        margin-left: 9%;
    }

    .movb {
        margin-left: 40%;
    }
</style>