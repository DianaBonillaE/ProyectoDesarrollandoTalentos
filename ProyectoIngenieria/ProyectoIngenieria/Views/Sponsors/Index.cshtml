@model PagedList.IPagedList<ProyectoIngenieria.DB.Sponsor>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

<div class="container md-3">
    <br />
    <h1 class="text-center">Patrocinadores</h1>
    <br />
    @if (ViewBag.message != null)
    {
        <div class="alert alert-success text-center alert-dismissible">
            <h4 class="alert-heading"><i class="icon fa fa-check"></i> ¡Correcto!</h4>
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
            <h6>@ViewBag.message</h6>
        </div>
    }
    <br />
    <div class="row">
        <div class="col-sm-4"></div>

        <a href="/Sponsors/CreateSponsorEnterprise" class="btn btn-primary btn-md text-uppercase">Añadir Empresa</a>

        <a href="/Sponsors/Create" class="btn btn-primary btn-md text-uppercase" style="margin-left:2%;">Añadir Persona</a>

    </div>

    <div class="panel-body">
        <br />
        <table class="table">
            <tr class="text-center">
                <th>
                    <p class="text-muted">Nombre</p>
                </th>
                <th>
                    <p class="text-muted">Apellido o Tipo</p>
                </th>
                <th>
                    <p class="text-muted">Correo</p>
                </th>
                <th>
                    <p class="text-muted">Teléfono</p>
                </th>
                <th>
                    <p class="text-muted">Descripción</p>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.identification }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.identification })
                    </td>
                </tr>
            }

        </table>
        <br />
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
            </div>
        </div>


    </div>
    <br />
    <br />
</div>
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 8%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>
