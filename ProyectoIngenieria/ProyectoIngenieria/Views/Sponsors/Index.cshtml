@model PagedList.IPagedList<ProyectoIngenieria.DB.Sponsor>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

<div class="container md-3">
    <br />
    <h1 class="text-center">Patrocinadores</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-4"></div>
       
            <a href="/Sponsors/CreateSponsorEnterprise" class="btn btn-primary btn-md text-uppercase">Añadir Empresa</a>
            
            <a href="/Sponsors/Create" class="btn btn-primary btn-md text-uppercase" style="margin-left:2%;">Añadir Persona</a>
        
    </div>

    <div class="panel-body">
        <br />
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido o Tipo
                </th>
                <th>
                    Correo
                </th>
                <th>
                    Teléfono
                </th>
                <th>
                    Descripción
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.phone_number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.identificacion }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.identificacion })
                    </td>
                </tr>
            }

        </table>
        <br />
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
            </div>
        </div>


    </div>
    <br />
    <br />
</div>
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>
