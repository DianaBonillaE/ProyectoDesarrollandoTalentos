@model PagedList.IPagedList<ProyectoIngenieria.DB.Voluntary>
@using PagedList.Mvc;

@Html.Partial("~/Views/Home/AdminMenu.cshtml")

    <div class="container md-3">
        <br />
        <h1 class="text-center">Voluntarios</h1>
        <br />
        <br />
        @if (ViewBag.menssage != null)
        {
            <div class="alert alert-success text-center alert-dismissible">
                <h3 class="alert-heading"><i class="icon fa fa-check"></i> ¡Correcto!</h3>
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
                <h6>@ViewBag.menssage</h6>
            </div>
        }
        <div class="row">
            <div class="col-sm-9"></div>
            <div class="col-sm-3 ">
                <a href="~/Voluntaries/Create" class="btn btn-primary btn-md text-uppercase">Añadir Nuevo</a>
            </div>
        </div>
        <div class="panel-body">
            <br />
            <table class="table table-responsive-sm">
                <tr>
                    <th class="text-center">
                        <p class="text-muted">Nombre</p>
                    </th>
                    <th class="text-center">
                        <p class="text-muted">Apellidos</p>
                    </th>
                    <th class="text-center">
                        <p class="text-muted">Estado</p>
                    </th>
                    <th class="text-center">
                        <p class="text-muted">Teléfono</p>
                    </th>
                    <th>  
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.last_name)
                        </td>

                        <td class="text-center">
                            @if (item.state == true)
                            {
                                <a>Activo</a>
                            }
                            else
                            {
                                <a>No activo</a>
                            }

                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.phone_number)
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Editar", "Edit", new { id = item.identification }) |
                            @Html.ActionLink("Detalles", "Details", new { id = item.identification }) |
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.identification })
                        </td>
                    </tr>
                }

            </table>
            <br />
            <div class="row">
                <div class="col-sm-5"></div>
                <div class="col-sm-6 ">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
                </div>
            </div>


        </div>
        <br />
        <br />
    </div>
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 80%;
        margin-top: 8%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>


