@model PagedList.IPagedList<ProyectoIngenieria.DB.Voluntary>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
}

<div class="container md-3">
    <br />
    <h1 class="text-center">Voluntarios</h1>
    <br />
    <br />
    <div class="row">
        <div class="col-sm-9"></div>
        <div class="col-sm-3 ">
            <a href="/Voluntaries/Create" class="btn btn-primary btn-md text-uppercase">Añadir Nuevo</a>
        </div>
    </div>

    <div class="panel-body">
        <br />
        <table class="table ">
            <tr class="text-center">
                <th>
                    <p class="text-muted">Nombre</p>
                </th>
                <th>
                    <p class="text-muted">Apellidos</p>
                </th>
                <th>
                    <p class="text-muted">Estado</p>
                </th>
                <th>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.last_name)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.state)
                    </td>
                    <td>
                        @Html.ActionLink("Detalles", "Details", new { id = item.identification }) |
                        @Html.ActionLink("Editar", "Edit", new { id = item.identification }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.identification })
                    </td>
                </tr>
            }
        </table>
        <br />
        <div class="row">
            <div class="col-sm-5"></div>
            <div class="col-sm-6 ">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, pageSize = Model.PageSize }))
            </div>
        </div>


    </div>
    <br />
    <br />
</div>
<hr />

<style>

    #mainNav {
        background-color: rgb(46,49,146);
    }

    .md-3 {
        box-shadow: 5px 0px 40px rgba(0,0,0, .2);
        width: 97%;
        margin-top: 10%;
    }

    .panel {
        border-radius: 0 !important;
        transition: box-shadow 0.5s;
        width: 55%;
    }
</style>

